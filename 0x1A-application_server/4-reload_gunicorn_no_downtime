#!/usr/bin/env bash
# This script gracefully restarts Gunicorn

# Find the process ID (PID) of the Gunicorn master process
PID=$(pgrep -f 'gunicorn')

if [ -z "$PID" ]; then
  echo "Gunicorn is not running."
  exit 1
fi

# Send the HUP signal to the Gunicorn master process to gracefully reload
kill -HUP "$PID"

echo "Gunicorn reloaded successfully."
